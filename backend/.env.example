# 📝 Backend Environment Variables
# Configure as variáveis abaixo conforme seu ambiente

# 💾 Configurações do Banco de Dados
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=npjdatabase
DB_PORT=3306

# 🔐 Configurações JWT
JWT_SECRET=npj_secret_key_super_secure_2025
JWT_REFRESH_SECRET=npj_refresh_secret_key_2025

# 🖥️ Configurações do Servidor
PORT=3001
NODE_ENV=development

# 📧 Configurações de Email (opcional para desenvolvimento)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app
EMAIL_FROM=noreply@npjsystem.com

# 📁 Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 🔒 Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=npj_session_secret_2025

# 📊 Configurações de Log (opcional)
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 🌐 Configurações CORS (opcional)
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ⚡ Configurações de Performance (opcional)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 🔧 Configurações de Desenvolvimento (opcional)
DEBUG=npj:*
ENABLE_SWAGGER=true
